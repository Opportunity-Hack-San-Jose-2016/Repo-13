<% layout('../layout') -%>
    <% block('title', 'Asian American Association') -%>
        <link rel="stylesheet" href="vendor/angular-bootstrap-datetimepicker/src/css/datetimepicker.css"/>
        <!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css"> -->
        <script>
            $(document).ready(function() {
                $('.ui.accordion').accordion();
            })
        </script>
        <style></style>
        <div ng-controller="EventController">
            <div class="ui styled fluid accordion">
                <div ng-repeat="event in events track by event._id" ng-cloak>
                    <div class="title">{{event.title}}
                        <i class="ui remove icon" ng-click="deleteEvent(event, $index)"></i>
                    </div>
                    <div class="content">
                        <form name="updateEvent" novalidate ng-submit="put($index)">
                            <div class="ui form">
                                <div class="inline fields">
                                    <div class="two wide field">
                                        <label>Name</label>
                                    </div>
                                    <div ng-show="updateEvent.fName.$error.longname && showValidations">DCMM</div>
                                    <div class="eight wide field">
                                        <input type="text" name="fName" longname ng-model="event.name" value={{event.name}} required>
                                    </div>
                                </div>
                                <div class="inline fields">
                                    <div class="two wide field">
                                        <label>Image</label>
                                    </div>
                                    <div class="eight wide field">
                                        <input type="text" ng-model="event.image" value={{event.image}}>
                                    </div>
                                </div>
                                <div class="inline fields">
                                    <div class="two wide field">
                                        <label>Description</label>
                                    </div>
                                    <div class="eight wide field">
                                        <input type="text" ng-model="event.description" value={{event.description}}>
                                    </div>
                                </div>
                                <div class="inline fields">
                                    <div class="two wide field">
                                        <label>Date</label>
                                    </div>
                                    <div class="eight wide field">
                                        <input type="text" ng-model="event.date" value={{event.date}}>
                                        <!-- <datetimepicker ng-model="event.date" value={{event.date}}></datetimepicker> -->
                                    </div>
                                </div>
                                <button ng-disabled="updateEvent.$invalid" type="submit">Save changes</button>
                            </div>
                        </form>
                    </div>
                </div>

                <form name="create" novalidate>
                    <label for="name">Name</label>
                    <input name="name" ng-model="newEvent.name"></input>

                    <label for="description">Description</label>
                    <input name="description" ng-model="newEvent.description"></input>

                    <label for="image">Image</label>
                    <input name="image" ng-model="newEvent.image"></input>
                    <button ng-click="createEvent()">Send</button>
                </form>
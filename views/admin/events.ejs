<% layout('layout') -%>
    <% block('title', 'Asian American Association') -%>
        <script>
            $(document).ready(function() {
                $('.ui.accordion').accordion();
                $('.sidebar').first()
                  .sidebar('attach events', '.toggle.button', 'toggle')
                ;
                // $('.toggle.button')
                //   .removeClass('disabled')
                // ;
            })
        </script>
        <style>
            .button {
                -moz-appearance: button;
                /* Firefox */
                -webkit-appearance: button;
                /* Safari and Chrome */
                padding: 10px;
                margin: 10px;
                width: 70px;
            }
            
            .drop-box {
                background: #F8F8F8;
                border: 5px dashed #DDD;
                width: 200px;
                height: 65px;
                text-align: center;
                padding-top: 25px;
                margin: 10px;
            }
            
            .dragover {
                border: 5px dashed blue;
            }
        </style>
        <link rel="stylesheet" href="/vendor/datetimepicker/jquery.datetimepicker.css">
        <link rel="stylesheet" src="/vendor/semantic-ui/dist/components/sidebar.min.css">
        <script src="/vendor/semantic-ui/dist/components/sidebar.min.js"></script>
        <div class="ui left vertical inverted visible sidebar labeled menu">
            <a class="item">
                Blog
              </a>
            <a class="item">
    Cabinet
  </a>
            <a class="item">
    Committees
  </a>
            <a class="item">
    Events
  </a>
            <a class="item">
    Families
  </a>
        </div>
        <div class="pusher">
                    <div class="ui toggle button"></div>
            <div class="ui two column grid">
            <div class="column">
            <div ng-controller="EventController">
                <!-- <input type="file" ngf-select ngf-change="onFileSelect($files)"> -->
                <div class="ui action right icon input">
  <i class="search icon"></i>
  <input type="text" placeholder="Search..." ng-model="query">
</div>
                <div class="ui styled fluid accordion">
                    <div ng-repeat="event in events | search:query" ng-cloak>
                        <div class="title ui grid">
                            <div class="ui left floated five wide column">{{event.title}}</div>
                            <div class="ui right floated five column">
                                <i class="ui expand icon"></i>
                            </div>
                        </div>
                        <div class="content">
                            <form name="updateEvent" novalidate ng-submit="put($index)">
                                <div class="ui form">
                                    <div class="inline fields">
                                        <div class="two wide field">
                                            <label>Name</label>
                                        </div>
                                        <!-- <div ng-show="updateEvent.fName.$error.longname && showValidations">DCMM</div> -->
                                        <div class="eight wide field">
                                            <input type="text" name="fName" ng-model="event.name" required>
                                        </div>
                                    </div>
                                    <div class="inline fields">
                                        <div class="two wide field">
                                            <label>Image</label>
                                        </div>
                                        <div class="eight wide field">
                                            <img class="ui small image" src={{event.imageUrl}} alt="">
                                            <input type="file" name="image" files-model="event.image" multiple>
                                        </div>
                                    </div>
                                    <div class="inline fields">
                                        <div class="two wide field">
                                            <label>Description</label>
                                        </div>
                                        <div class="eight wide field">
                                            <input type="text" ng-model="event.description">
                                        </div>
                                    </div>
                                    <div class="inline fields">
                                        <div class="two wide field">
                                            <label>Date</label>
                                        </div>
                                        <div class="eight wide field dateContainer">
                                            <input type="text" class="datepicker" ng-model="event.date">
                                        </div>
                                    </div>
                                    <div class="inline fields ui grid">
                                        <div class="ui left floated wide column"></div>
                                    <button ng-disabled="updateEvent.$invalid" type="submit">Save changes</button>
                                    <button ng-click="deleteEvent(event, $index)">Delete this event</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div>
                        <div class="title">make new</div>
                        <div class="content">
                    <form name="create" novalidate>
                        <label for="name">Name</label>
                        <input name="name" ng-model="newEvent.name"></input>

                        <label for="description">Description</label>
                        <input name="description" ng-model="newEvent.description"></input>

                        <label for="image">Image</label>
                        <input name="image" files-model="newEvent.image" multiple type="file"></input>

                        <label for="date">Date</label>
                        <input name="date" ng-model="newEvent.date" id="newEventDate"></input>
                        <button ng-click="createEvent()">Send</button>
                    </form>
                </div>
                </div>
                </div>
            </div>
            </div>
        </div>
        </div>
        </div>
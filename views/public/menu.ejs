<div class="ui container" style="padding-top:1em">
  <div class="ui large secondary pointing menu no-border" ng-class="{inverted: page=='home'}">
    <a class="toc item">
      <i class="sidebar icon"></i>
    </a>
    <a class="item" ng-class="{active: page=='home'}" ng-href="{{paths.public.home.index}}">Home</a>
    <a class="item" ng-class="{active: page=='events'}" ng-href="{{paths.public.events.index}}" ng-if="userName">Profile</a>
    <a class="item" ng-class="{active: page=='families'}" ng-href="{{paths.public.families.index}}" ng-if="userName">Dashboard</a>
    <div class="right item" ng-if="!userName">
      <a class="ui button aaa-menu-button" ng-click="self.openLoginModal()" ng-class="{inverted: page=='home', basic:page!='home', blue:page!='home'}">Log in</a>
      <a class="ui button aaa-menu-button" ng-click="self.openSignupModal()" ng-class="{inverted: page=='home', basic:page!='home', teal:page!='home'}">Sign Up</a>
    </div>
    <div class="right item aaa-menu-button" ng-if="userName">
      <a>Hey, {{userName}}!</a>
      <a class="ui button aaa-menu-button" ng-class="{inverted: page=='home', basic:page!='home', red:page!='home'}" ng-click="self.logout()">Log Out</a>
      <a ng-if="userClearance >= 3" class="ui button aaa-menu-button" ng-class="{inverted: page=='home', basic:page!='home', orange:page!='home'}" ng-href="{{paths.admin.base}}">Admin</a>
    </div>
  </div>
  <aaa-login-modal></aaa-login-modal>
  <aaa-signup-modal></aaa-signup-modal>
</div>
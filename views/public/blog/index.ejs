<% layout('../layout') -%>
<% block('title', 'AAA - Blog') -%>

<body ng-controller="BlogController as self" ng-init="page='blog';<%- include ../auth.ejs %>" class="aaa-main-page">
  <%- include ../sidebar.ejs %>
  <%- include ../menu.ejs %>
  <div class="pusher">
    <div class="ui container">
      <div class="ui basic very padded header segment">
        <div class="ui huge orange header aaa-main-title">Blog | <span class="aaa-main-title-text">penny for your thoughts</span></div>
      </div>
      <div class="ui segment" ng-repeat="blog in blogs">
        <a class="ui red ribbon label">{{blog.date}}</a>
        <div class="ui center aligned header"><h1>{{blog.name}}</h1></div>
        <div class="ui text container">
          <img ng-repeat-start="component in blog.components" class="ui medium floated image" ng-src="{{component.image}}" ng-show="{{component.image}}" ng-class="{left: $even, right: $odd}">
          <p ng-repeat-end>{{component.paragraph}}</p>

        </div>
      </div>
    </div>
  </div>
  <br><br>
</body>
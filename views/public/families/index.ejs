<% layout('../layout') -%>
<% block('title', 'AAA - Families') -%>

<body ng-controller="FamiliesController as self" ng-init="page='families';<%- include ../auth.ejs %>" class="aaa-main-page">
  <%- include ../sidebar.ejs %>
  <%- include ../menu.ejs %>
  <div class="pusher">
    <div class="ui container">
      <div class="ui basic very padded header segment">
        <div class="ui huge pink header aaa-main-title">Families | <span class="aaa-main-title-text">the foundation of aaa</span></div>

      </div>
      <div class="ui segment" ng-repeat="family in families">
        <div class="ui clearing very basic segment" style="margin-bottom:0px">
          <h1 class="ui centered header">
            {{family.name}}
          </h1>
        </div>
        <div class="ui basic segment" style="margin-top:0px">
          <div class="ui two column grid">
            <div class="thirteen wide column">
              <img ng-src="{{family.image}}" class="ui fluid rounded image">
            </div>
            <div class="three wide center aligned column">
              <div class="ui basic segment" ng-repeat="parent in family.parents" style="margin:0">
                <img class="ui small circular centered image" ng-src="{{parent.image}}">
                <a class="header" style="font-size:16px">{{parent.name}}</a>
              </div>
            </div>
          </div>
        <div class="ui segment">
          <div class="ui text container">
            {{family.description}}
          </div>
        </div>
      </div>
    </div>
  </div>
  <br><br>
</body>
